<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teamhorario.upslp.apphorariosupslp.WelcomeActivity"
    android:scrollIndicators="start">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:background="@drawable/bannerupslp"
        android:maxHeight="20dp"
        android:maxWidth="100dp"
        android:layout_alignParentEnd="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:foregroundTintMode="screen"
        android:background="@drawable/border"
        android:id="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout2"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView2"
            android:layout_gravity="left|center_vertical"
            android:textAlignment="viewStart"
            android:textSize="16dp"
            android:textIsSelectable="true"
            android:text="Matricula:" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ACCEDER"
            android:id="@+id/btnacc"
            android:layout_gravity="center_horizontal|bottom" />

        <EditText
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="right|center_vertical" />

        <ImageView
            android:layout_width="89dp"
            android:layout_height="75dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/iconmihorario" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout2"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Derechos reservado UPSLP, 2016 Ingresa Introducendo tu matricula"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="12dp" />
    </FrameLayout>
</RelativeLayout>
